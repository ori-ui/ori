title.text {
  font-weight: bold,
  font-size: 30.0,
  color: $theme.primary,
}

subtitle.text {
  font-size: 24.0,
  font-style: italic,
  color: $title.text.color,
}

style {
  text-input {
    font-family: monospace,
  }

  container {
    border-width: 1.0,
    border-radius: 6.0,
  }

  padding: 8.0,
}

error.text {
  font-family: monospace,
  color: $theme.danger,
}

stack {
  align: stretch,
  gap: 10.0,
}
